@model IEnumerable<Web.Models.Book>

    <h2>Viewing books</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Year</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var @item in Model)
            {
            <tr>
                <td> @item.Title </td>
                <td> @item.Author </td>
                <td> @item.Genre.Name </td>
                <td> @item.Year </td>
                <td> 
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary">Create a book</a>