@model IEnumerable<Web.Models.Genre>

<h2>Viewing genres</h2>

<table class="table">
    <thead>
        <tr>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var @item in Model)
        {
            <tr>
                <td> @item.Name </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create a genre</a>
